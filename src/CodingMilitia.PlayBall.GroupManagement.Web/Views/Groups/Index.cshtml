@model IEnumerable<GroupViewModel>

<link rel="icon" href="favicon.ico" type="image/x-icon" />

<ul>
    @foreach (var g in Model)
    {
        // @*asp-route-extra="dummy"*@
        <li>@g.Name <a asp-controller="Groups" asp-action="DetailsAsync" asp-route-id="@g.Id">Edit</a></li>
    }
</ul>

<a asp-controller="Groups" asp-action="create">Create Group</a>
