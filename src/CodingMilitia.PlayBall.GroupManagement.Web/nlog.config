<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- File  -->
    <target xsi:type="File" name="webLogFile" fileName="${basedir}/logs/web.log"
            layout="${date:universalTime=true:format=yyyy-MM-ddTHH\:mm\:ss.fff} ${level} ${message} ${exception} ${ndlc}" />

    <!-- Console -->
    <target xsi:type="ColoredConsole" name="coloredConsole"
            layout="${date:universalTime=true:format=yyyy-MM-ddTHH\:mm\:ss.fff} ${level} ${message} ${exception}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="Microsoft.*" minlevel="Trace" maxLevel="Info" final="true" />  <!--back hole-->
    <logger name="*" minlevel="Trace" maxLevel="Fatal" writeTo="coloredConsole" final="false" />
    <logger name="*" minlevel="Info" maxLevel="Fatal" writeTo="webLogFile" final="false" />
  </rules>
</nlog>
